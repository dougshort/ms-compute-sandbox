# User specific aliases and functions

alias "nmon='/opt/cbts/msops/bin/nmon'"
alias "ops='/opt/cbts/msops/scripts/ops.menu.sh'"
alias "c='/usr/bin/clear'"
alias "machinfo='cat /etc/redhat-release; dmidecode --type 1; cat /proc/meminfo | grep MemT; cat /proc/meminfo| grep -i swap; dmidecode -t 4 |grep -E 'Designation|Core|Version''"
alias "cbts='cd /opt/cbts/'"
